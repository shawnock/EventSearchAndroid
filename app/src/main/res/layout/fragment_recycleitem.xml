<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_gap">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/radius"
        card_view:cardCornerRadius="@dimen/radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/upevent_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/upevent_name"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginTop="@dimen/text_gap"
                android:layout_marginBottom="@dimen/text_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textColor="@color/colorCyan"/>

            <TextView
                android:id="@+id/upevent_art"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginBottom="@dimen/text_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textColor="@color/colorOrange"/>

            <TextView
                android:id="@+id/upevent_time"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginBottom="@dimen/text_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textColor="@color/fontColor"/>

            <TextView
                android:id="@+id/upevent_type"
                android:layout_marginLeft="@dimen/text_left"
                android:layout_marginBottom="@dimen/text_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>